---
import { isMentionType, MENTION_TYPE } from 'utils/mentions.js'

interface Props {
    webMentions: any[];
}

const { webMentions } = Astro.props as mentions;

const likesCount = null;
const repliesCount = null;
const sharesCount = null;
---

{webMentions.length > 0 && (
  <div class="mentions">
    {likesCount && likesCount > 0 && (
      <div class="mention">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart">
          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
        </svg>
        {likesCount}
      </div>
    )}

    {repliesCount && repliesCount > 0 && (
      <div class="mention">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-message-circle">
        <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/>
        </svg>
        {repliesCount}
      </div>
    )}

    {sharesCount && sharesCount > 0 && (
      <div class="mention">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-repeat">
          <polyline points="17 1 21 5 17 9"/>
          <path d="M3 11V9a4 4 0 0 1 4-4h14"/>
          <polyline points="7 23 3 19 7 15"/>
          <path d="M21 13v2a4 4 0 0 1-4 4H3"/>
        </svg>
        {sharesCount}
      </div>
    )}
  </div>
)}

<style lang="scss">
  .mentions {
    display: inline-flex;
    gap: var(--spacer-sm);

    & .mention {
      display: flex;
      align-items: center;
      gap: var(--spacer-tiny);
    }

    & svg {
      height: 1em;
      width: 1em;
    }
  }
</style>
